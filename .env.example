# Chemical Eye Environment Configuration
# Copy to .env and fill in values

# Environment
ENVIRONMENT=dev

# Database (SQLite for dev, Postgres for prod)
DATABASE_URL=sqlite:///./data/chemeye.db
# DATABASE_URL=postgresql://user:pass@host:5432/chemeye

# NASA EarthData credentials
# Sign up at: https://urs.earthdata.nasa.gov/
NASA_EARTHDATA_USERNAME=
NASA_EARTHDATA_PASSWORD=

# API Security
SECRET_KEY=change-this-to-a-random-string-in-production
ADMIN_TOKEN=change-this-to-a-random-string-in-production

# API Settings
API_V1_PREFIX=/v1
CORS_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO
